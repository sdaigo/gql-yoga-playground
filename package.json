{
  "private": true,
  "name": "gql-yoga-playground",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development bun run --watch src/main.ts",
    "start": "bun run src/main.ts",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "format": "biome format src",
    "format:fix": "biome format --write src",
    "codegen:gql": "bunx graphql-codegen"
  },
  "dependencies": {
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.13.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eddeee888/gcg-typescript-resolver-files": "^0.12.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@prisma/client": "^6.5.0",
    "@types/bun": "latest",
    "@types/node": "^22.13.11",
    "cross-env": "^7.0.3",
    "lefthook": "^1.11.3",
    "prisma": "^6.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
