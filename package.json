    "format": "biome format src",
    "format:fix": "biome format --write src"
  },
  "dependencies": {
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.13.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@prisma/client": "^6.5.0",
    "@types/bun": "latest",
    "@types/node": "^22.13.11",
    "cross-env": "^7.0.3",
    "lefthook": "^1.11.3",
    "prisma": "^6.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
